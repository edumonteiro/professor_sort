<h1>List of Courses</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>credits</th>
      <th>type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, edit_admin_course_path(course) %></td>
        <td><%= course.credits %></td>
        <td><%= course.kind %></td>
        <td><%=  link_to 'Preferences History', admin_course_preferences_path(course) %></td>
        <td><%=  link_to 'Lectures History', admin_course_lectures_path(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="panel-default well">
  <div class="panel-heading">
    <h3 class='panel-title'>Add a new course</h3>
  </div>
  <div class="panel-body">
    <%= form_for [:admin, @new_course] do |f| %>
    <div class='row'>
      <div class="form-group col-md-4">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      <div id="timeforms"></div>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :credits %><br>
        <%= f.text_field :credits %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :Type %><br>
        <%= f.select :kind,options_for_select([["Major","major"],["Service","service"]]), :prompt =>"Please select"%>
      </div>
    </div>
    <div class='row'>
      <div class="actions">
        <%= f.submit 'Submit',class: 'btn btn-primary col-sm-offset-6' %>
      </div>
    </div>
    <% end %>
  </div>
</div>